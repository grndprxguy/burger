<h1>Burgers:</h1>

<h2>Not-Eaten Burgers
<ul>
	{{#each burgers}}
		{{#unless devloured}}
			{{burger_name}}
			{{> burgers/burger-block devoured=true}}
			}
		{{/unless}}
	{{/each}}
</ul>

<h2>Devoured Burgers</h2>
<ul>
	{{#each burgers}}
		{{#if devoured}}
			{{> burgers/burger-block devoured=false}}
		{{/if}}
	{{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">
	<div class="form-group">
		<label for="bgr">Burger Name:</label>
		<input type="text" id="bgr" name="name">
	</div>

	<div class="form-group">
		<label for="dvr">Devoured?</label><br>
		<input type="radio" name="devoured" value="1" checked> Devoured!<br>
		<input type="radio" name="devoured" value="0"> Not Eaten
	</div>
	<button type="submit">Add Burger</button>
</form>