<div class="container">
	<div class="header">
		<h1>Burgers</h1>
		<img src="/assets/img/burger.jpg" alt="Burger Image">
	</div>

	<div class="content-body">
		

		<div class="uneaten">
			<h2>Burgers Available</h2>
			<ul class="list-group uneaten">
				<h3>
					{{#each burgers}}
					{{#unless devoured}}
						{{burger_name}}{{> burgers/burger-block devoured=true}}
					{{/unless}}
				{{/each}}
				</h3>
			</ul>
		</div>

		<div class="eaten">
			<h2>Devoured Burgers</h2>
			<ul class="list-group">
				<h3>
					{{#each burgers}}
					{{#if devoured}}
						{{burger_name}}{{> burgers/burger-block devoured=false}}
					{{/if}}
				{{/each}}
				</h3>
			</ul>
		</div>

		<div class="footer">
			<h2>Add a Burger</h2>
			<form class="create-form">
				<div class="form-group">
					<label for="bgr">Burger Name:</label>
					<input type="text" class="form-control" id="bgr" name="name">
				</div>

				<div class="form-check">
					<label class="form-check-label" for="dvr">Devoured?</label></h3><br>
					<input class="form-check-input" type="radio" name="devoured" value="1" checked>Yes!<br>
					<input class="form-check-input"type="radio" name="devoured" value="0"> No
					</div>
				<button class="btn btn-success" type="submit">Add Burger</button>
			</form>
		</div>
	</div>
</div>